<configuration>
    <property name="tag" value="inn-hyper-storage-service"/>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%highlight(%.-3level) %cyan(%d{HH:mm:ss.SSS}) %yellow(%-35.35logger) %highlight(%msg) %n</pattern>
        </encoder>
    </appender>

    <logger name="akka.cluster.ClusterHeartbeatSender">
        <level value="INFO" />
    </logger>

    <logger name="eu.inn.hyperstorage">
        <level value="TRACE" />
    </logger>

    <logger name="eu.inn.hyperstorage.recovery">
        <level value="INFO" />
    </logger>

    <logger name="com.datastax">
        <level value="INFO" />
    </logger>

    <logger name="io.netty">
        <level value="INFO" />
    </logger>

    <logger name="eu.inn.binders.cassandra">
        <level value="INFO" />
    </logger>

    <logger name="org.apache.kafka">
        <level value="INFO" />
    </logger>

    <root level="TRACE">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
