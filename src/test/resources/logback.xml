<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%highlight(%.-3level) %cyan(%d{HH:mm:ss.SSS}) %yellow(%-35.35logger) %magenta(%X{subscriptionId}) %highlight(%msg) %n</pattern>
        </encoder>
    </appender>
    <logger name="eu.inn.revault.RevaultWorker">
        <level value="trace" />
    </logger>
    <logger name="eu.inn.revault.RevaultCompleter">
        <level value="trace" />
    </logger>
    <logger name="eu.inn.revault.sharding.ShardProcessor">
        <level value="trace" />
    </logger>
    <logger name="eu.inn.revault.HyperbusAdapter">
        <level value="trace" />
    </logger>
    <root level="debug">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
